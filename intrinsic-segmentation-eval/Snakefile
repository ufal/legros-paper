    "mn": "mon",
    "ru": "rus"}


all_langs = ["cs", "en", "es", "fr", "hu", "it", "mn", "ru"]
segm_types = ["spm", "bpe"]
pretok_types = ["word", "morf"]
vocab_sizes_k = [1, 2, 4, 8, 16, 24, 32, 48]
evaluations = ["embedding-based", "bigrams"]

